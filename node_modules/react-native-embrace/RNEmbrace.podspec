Pod::Spec.new do |s|
  s.name         = "RNEmbrace"
  s.version      = "1.0.0"
  s.summary      = "A React Native wrapper for Embrace SDK"

  s.license      = "ISC"
  s.authors      = { "Embrace.io" => "truenorth@embrace.io" }
  s.ios.deployment_target = '8.0'
